model Brand {
  id        String    @id @default(uuid())
  name      String    @unique
  slug      String    @unique
  description String?
  country   String?
  logoUrl   String?   // optional logo image URL
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  products  Product[] // relation to Product table

  @@map("brands")
}
